{
  "name": "open-explorer-cross-platform",
  "version": "1.0.0",
  "description": "A cross platform NodeJs module to open a folder in the native os file system",
  "exports": "./index.js",
  "type": "module",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "start": "ts-node-esm --project tsconfig.json index.ts",
    "lint": "tsc --project tsconfig.json --noEmit && eslint . --ext .js,.ts",
    "lint:fix": "tsc --project tsconfig.json --noEmit && eslint . --ext .js,.ts --fix",
    "clear": "rm -rf ./dist",
    "build": "npm run clear && npm run lint:fix && tsc --project tsconfig.json",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
