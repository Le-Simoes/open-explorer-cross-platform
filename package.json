{
  "name": "open-explorer-cross-platform",
  "version": "1.0.1",
  "description": "A cross platform NodeJs module to open a folder in the native os file system",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "lint": "tsc --project tsconfig.json --noEmit && eslint . --ext .js,.ts",
    "lint:fix": "tsc --project tsconfig.json --noEmit && eslint . --ext .js,.ts --fix",
    "clear": "rm -rf ./dist",
    "build": "npm run clear && npm run lint:fix && tsc --project tsconfig.json",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leandrosimoes/open-explorer-cross-platform.git",
    "baseUrl": "https://github.com/leandrosimoes/open-explorer-cross-platform"
  },
  "keywords": [
    "open",
    "explorer",
    "cross",
    "platform"
  ],
  "author": {
    "name": "Leandro Sim√µes",
    "email": "leandro.simoes@outlook.com"
  },
  "license": "MIT",
  "licenseFilename": "LICENSE",
  "readmeFilename": "README.md",
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
